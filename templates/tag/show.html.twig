{% extends 'base.html.twig' %}

{% block title %}Tag {{ tag.name }}{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Tag : #{{ tag.name }}</h1>
    <div class="container-fluid mx-2">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Titre</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for article in tag.articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.category.name }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas d'articles associés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row my-2 justify-content-start">
            <a class="btn btn-success w-20" href="{{ path('tag_index') }}">Retour à la liste des tags</a>
        </div>
    </div>

{% endblock %}
