{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <h1 class="text-center m-3">Liste des tags</h1>
     <div class="container-fluid mx-2">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Tag</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.nama }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas de tags</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
